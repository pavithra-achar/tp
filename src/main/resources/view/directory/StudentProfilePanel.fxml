<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" styleClass="panel-container" stylesheets="@../css/Main.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <Label styleClass="panel-heading" text="Student Profile" />
    
    <GridPane hgap="10" vgap="15" VBox.vgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="60" prefWidth="80" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="150" />
        </columnConstraints>
        
        <Label styleClass="label-bright" text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="nameField" promptText="Enter full name" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label styleClass="label-bright" text="Gender:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="genderField" promptText="e.g., Male / Female" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label styleClass="label-bright" text="Block:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="blockField" promptText="e.g., A" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label styleClass="label-bright" text="Floor:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="floorField" promptText="e.g., 10" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label styleClass="label-bright" text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextField fx:id="addressField" promptText="Enter full address" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <Label styleClass="label-bright" text="Tags:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <TextField fx:id="tagsField" promptText="e.g., EXCO, Sports" GridPane.columnIndex="1" GridPane.rowIndex="5" />
        <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
        </rowConstraints>
    </GridPane>

    <HBox alignment="CENTER_RIGHT">
        <Button text="Save Changes" styleClass="btn-save" />
    </HBox>
</VBox>
