            <StackPane fx:id="profilePlaceholder" styleClass="stack-pane" />
          </content>
        </Tab>
        <Tab text="CCA Records">
          <graphic>
          </graphic>
          <content>
            <StackPane fx:id="ccaRecordsPlaceholder" styleClass="stack-pane" />
          </content>
        </Tab>
        <Tab text="Demerit Records">
          <graphic>
          </graphic>
          <content>
            <StackPane fx:id="demeritRecordsPlaceholder" styleClass="stack-pane" />
          </content>
        </Tab>
      </tabs>
    </TabPane>
  </children>
</VBox>
